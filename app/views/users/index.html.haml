// --- News feed --- \\
.row.small-margin-top
    .col-3
        .card
            .card-body 
                %i{:class => "fas fa-paint-brush icon_bio"}
                =link_to "Artist Feed", "/", class: "link_bio"
                %hr
                %i{:class => "far fa-thumbs-up icon_bio"}
                =link_to "Likes", "/", class: "link_bio"
                %hr
                %i{:class => "fas fa-shopping-cart icon_bio"}
                =link_to "Marketplace", "/", class: "link_bio"
                %hr
                %i{:class => "fas fa-envelope icon_bio"}
                =link_to "Direct Messages", "/", class: "link_bio"
    .col-6
        .card.small-margin-bottom
            %h3{:class => "post_title"} Create Post
            = render 'posts/form'
        = render 'posts/posts'
        
    .col-3
        .card
            .card-body.small-font
                %p{:class => "primary"} Welcome to Artbook
                %hr
                %p Discover artists and find inspiration!