- @posts.each do |p|
    .card.small-margin-bottom
        .card-body
            %h5{:class => "card-title"} #{current_user.first_name} #{current_user.last_name}
            %h6{:class => "card-subtitle"} #{time_ago_in_words(p.created_at)}
            .card-text
                = p.body
                - if p.image?
                    =image_tag p.image.url(:large), class: "post_image"